{
  "overrides": [
    {
      "files": ["**/*.spec.js", "**/test/**/*.js"],
      "env": {
        "browser": false,
        "node": true,
        "mocha": true,
        "protractor": true
      },
      "globals": {
        "chai": false,
        "expect": false,
        "sinon": false
      },
      "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
      },
      "plugins": [
        "mocha"
      ],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ],
        "mocha/no-exclusive-tests": "error",
        "no-unused-expressions": 0
      }
    }
  ]
}
