{
  "env": {
  "browser": false,
  "node": true,
    "mocha": true
  },
  "globals": {
    "chai": false,
    "expect": false,
    "sinon": false
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "mocha/no-exclusive-tests": "error",
    "no-unused-expressions": 0
  }
}
