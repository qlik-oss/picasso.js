{
  "root": true,
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "max-len": 0,
    "no-bitwise": 0,
    "no-restricted-properties": 0,
    "no-restricted-syntax": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "one-var": 0,
    "prefer-const": 0,
    "no-continue": 0,
    "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
    "no-plusplus": 0,
    "curly": [2, "all"],
    "no-restricted-globals": ["off", "isNaN"],
    "prefer-destructuring": 0,
    "no-multi-assign": 0,
    "no-return-assign": 0,
    "prettier/prettier": 2
  },
  "overrides": [
    {
      "files": ["**/*.spec.js", "**/test/**/*.js"],
      "env": {
        "browser": false,
        "node": true,
        "mocha": true
      },
      "globals": {
        "chai": false,
        "expect": false,
        "sinon": false,
        "page": false,
        "aw": false
      },
      "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
      },
      "plugins": ["mocha"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ],
        "mocha/no-exclusive-tests": "error",
        "no-unused-expressions": 0
      }
    },
    {
      "files": ["**/test/protractor/**/*.js"],
      "env": {
        "protractor": true
      }
    }
  ]
}
