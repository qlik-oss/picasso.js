{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "airbnb/base",
  "rules": {
    "max-len": 0,
    "no-bitwise": 0,
    "no-restricted-properties": 0,
    "no-restricted-syntax": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "one-var": 0,
    "prefer-const": 0,
    "no-continue": 0,
    "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
    "no-plusplus": 0,
    "comma-dangle": [2, "never"],
    "curly": [2, "all"],
    "no-restricted-globals": ["off", "isNaN"],
    "prefer-destructuring": 0,
    "no-multi-assign": 0,
    "no-return-assign": 0
  }
}
