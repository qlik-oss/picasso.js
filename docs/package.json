{
  "name": "docs",
  "private": true,
  "version": "1.4.2",
  "description": "Documentation source",
  "scripts": {
    "build": "yarn run spec",
    "spec": "jsdoc -r ../packages/picasso.js/src -p ../packages/picasso.js/package.json -X | scriptappy-from-jsdoc -c ./scriptappy.config.js",
    "postspec": "prettier -w ./scriptappy.json",
    "ts": "yarn run spec && sy to-dts --export default --exportConst pjs -o ../packages/picasso.js/types/index.d.ts",
    "postts": "prettier -w ../packages/picasso.js/types/index.d.ts",
    "version": "yarn run spec && git add scriptappy.json"
  },
  "devDependencies": {
    "@scriptappy/cli": "^0.0.1",
    "jsdoc": "3.6.7",
    "scriptappy-from-jsdoc": "0.7.0"
  }
}
